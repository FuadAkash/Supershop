@model items

<form asp-controller="Items" asp-action="Edit" method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-white">Edit Items</h2>
            <hr />
        </div>
        <div class="row">
            <div class="col-md-3">
                <label asp-for="Name" class="p-0"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="Type" class="p-0"></label>
                <input asp-for="Type" class="form-control" />
            </div>
            <div class="col-md-3">
                <label asp-for="Count" class="p-0"></label>
                <input asp-for="Count" class="form-control" />
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-6">
                <label asp-for="location" class="p-0"></label>
                <input asp-for="location" class="form-control" />
            </div>
        </div>
        <hr />
        <div class="row mt-3">
            <div class="col-md-6 text-left">
                <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
            </div>
            <div class="col-md-6 text-end">
                <a asp-controller="Items" asp-action="Index" class="btn btn-outline-secondary" style="width:150px">Back to List</a>
            </div>
        </div>
    </div>
</form>