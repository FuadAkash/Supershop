@model items

<form enctype="multipart/form-data" asp-controller="items" asp-action="Create" method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-white">Add Items</h2>
            <hr />
        </div>
        <div class="row">
            <div class="col-md-3">
                <label>Name:</label>
                <input type="text" class="form-control" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label>Type:</label>
                <input type="text" class="form-control" asp-for="Type" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label>Count:</label>
                <input type="number" class="form-control" asp-for="Count" />
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-6">
                <label>Location:</label>
                <input type="text" class="form-control" asp-for="location" />
                <span asp-validation-for="location" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label>Price:</label>
                <input type="text" class="form-control" asp-for="Price" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-6">
                <label>Image:</label>
                <input type="file" name="file" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
        </div>
        <hr />
        <div class="row mt-3">
            <div class="col-md-6 text-left">
                <button type="submit" class="btn btn-primary" style="width:150px">Add</button>
            </div>
            <div class="col-md-6 text-end">
                <a asp-controller="items" asp-action="Index" class="btn btn-outline-secondary" style="width:150px">Back to List</a>
            </div>
        </div>
    </div>
</form>
