@using Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<form asp-action="Login" method="post" class="border p-3 mt-4 mx-auto" style="width: 400px;">
    @Html.AntiForgeryToken()
    <div class="row-md-3">
        <h2 class="text-white">Login</h2>
        <hr />
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" style="width: 300px;" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" class="form-control" style="width: 300px;" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group form-check">
        <input class="form-check-input" type="checkbox" asp-for="RememberMe" />
        <label class="form-check-label" asp-for="RememberMe">Remember Me</label>
    </div>
    <div class="row mt-3">
        <div class="col-md-6 text-left">
            <button type="submit" class="btn btn-primary" style="width:150px">Login</button>
        </div>
        <div class="col-md-6 text-end">
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary" style="width:150px">Back to Home</a>
        </div>
    </div>
</form>

